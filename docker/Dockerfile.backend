FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

WORKDIR /app

RUN apt-get update \
    && apt-get install -y --no-install-recommends \
        gcc \
        libpq-dev \
        curl \
        postgresql-client \
    && rm -rf /var/lib/apt/lists/*

COPY requirements.txt .
RUN pip install --upgrade pip \
    && pip install --no-cache-dir -r requirements.txt

COPY . .

EXPOSE 8000

RUN echo '#!/bin/bash\n\
set -e\n\
echo "Ожидание базы данных..."\n\
until pg_isready -h db -p 5432 -U ${POSTGRES_USER:-pavel} -d ${POSTGRES_DB:-star_burger}; do\n\
  echo "База данных недоступна, ждем 2 секунды..."\n\
  sleep 2\n\
done\n\
echo "База данных доступна! Запуск приложения..."\n\
exec "$@"' > /app/docker-entrypoint.sh \
    && chmod +x /app/docker-entrypoint.sh

ENTRYPOINT ["/app/docker-entrypoint.sh"]
CMD ["gunicorn", "star_burger.wsgi:application", "--bind", "0.0.0.0:8000", "--workers", "3"]